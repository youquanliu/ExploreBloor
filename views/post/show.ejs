    <link href="/stylesheets/main.css" rel="stylesheet">
    <title>CampShare</title>

<body>
    <div class="container">
        <div class="row">
            <!-- <div class="col-md-3">
            <p class="head">CampShare</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div> -->

            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%=post.image%>">
                    <div class="caption-full">
                        <h4><a><%=post.name%></a></h4>
                        <p> <%= post.description %> </p>
                        <!-- <p> <em> Submitted By <%= post.author.username %> </em> </p> -->
                        <!-- <% if(currentUser && post.author.id.equals(currentUser._id)){ %> -->
                        <a class="btn btn-warning" href="/main/<%=post._id%>/edit">Edit</a>
                        <form class="delete-form" action="/main/<%=post._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                        <!-- <% } %> -->

                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/main/<%=post._id%>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% post.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- <strong><%= comment.author.username  %></strong> -->
                            <span class="pull-right">10days ago</span>
                            <p><%= comment.text %></p>
                            <!-- <% if(currentUser && comment.author.id.equals(currentUser._id)){ %> -->
                            <a class="btn btn-xs btn-warning"
                                href="/main/<%=post._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form class="delete-form"
                                action="/main/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method=POST>
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">

                            </form>
                            <% } %>

                        </div>
                    </div>
                    <%}) %>
                </div>
            </div>
        </div>
    </div>


    <%include ../partials/footer%>