<%- include ../partials/header %>
<sction class="block"></sction>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new post</h1 style="text-align: center">
        <%if(errors.length>0) { %>
        <div class="alert alert-danger"><% for(error of errors) { %>
            <%= error %><br>
            <% } %>
        </div>
        <% } %>
        <div style="width:30%; margin: 25px auto;">
            <form action="/main/new" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"> </input>
                </div>

                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" rows="5"
                        placeholder="description"> </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/main">GO BACK</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>